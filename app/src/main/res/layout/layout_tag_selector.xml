<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_tag_selector">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_layout_tag_selector"
        android:layout_width="100dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v_tag_1"
        style="@style/AppImageIconGeneric"
        android:src="@drawable/vd_tag_1"
        app:layout_constraintTop_toTopOf="@id/bg_layout_tag_selector"
        app:layout_constraintStart_toStartOf="@id/bg_layout_tag_selector"
        app:layout_constraintEnd_toEndOf="@id/bg_layout_tag_selector"
        app:layout_constraintBottom_toTopOf="@id/v_tag_2"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v_tag_2"
        style="@style/AppImageIconGeneric"
        android:src="@drawable/vd_tag_2"
        app:layout_constraintTop_toBottomOf="@id/v_tag_1"
        app:layout_constraintStart_toStartOf="@id/bg_layout_tag_selector"
        app:layout_constraintEnd_toEndOf="@id/bg_layout_tag_selector"
        app:layout_constraintBottom_toTopOf="@id/v_tag_3"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v_tag_3"
        style="@style/AppImageIconGeneric"
        android:src="@drawable/vd_tag_3"
        app:layout_constraintTop_toBottomOf="@id/v_tag_2"
        app:layout_constraintStart_toStartOf="@id/bg_layout_tag_selector"
        app:layout_constraintEnd_toEndOf="@id/bg_layout_tag_selector"
        app:layout_constraintBottom_toTopOf="@id/v_tag_4"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v_tag_4"
        style="@style/AppImageIconGeneric"
        android:src="@drawable/vd_tag_4"
        app:layout_constraintTop_toBottomOf="@id/v_tag_3"
        app:layout_constraintStart_toStartOf="@id/bg_layout_tag_selector"
        app:layout_constraintEnd_toEndOf="@id/bg_layout_tag_selector"
        app:layout_constraintBottom_toTopOf="@id/v_tag_5"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v_tag_5"
        style="@style/AppImageIconGeneric"
        android:src="@drawable/vd_tag_5"
        app:layout_constraintTop_toBottomOf="@id/v_tag_4"
        app:layout_constraintStart_toStartOf="@id/bg_layout_tag_selector"
        app:layout_constraintEnd_toEndOf="@id/bg_layout_tag_selector"
        app:layout_constraintBottom_toBottomOf="@id/bg_layout_tag_selector"/>

</androidx.constraintlayout.widget.ConstraintLayout>