<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextGeneric">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/amaranth_regular</item>
    </style>

    <style name="AppTextHeadingGeneric">
        <item name="android:textColor">@color/text_headings</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/amaranth_bold</item>
    </style>

    <style name="AppButtonTextGeneric">
        <item name="android:textColor">@drawable/selector_generic_text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/sketch_font</item>
    </style>

    <style name="AppButtonGeneric" parent="AppButtonTextGeneric">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/selector_generic_button</item>
    </style>

    <style name="AppImageIconGeneric">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <!-- Home -->
    <style name="AppSearchTextGeneric" parent="AppTextGeneric">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">60</item>
        <item name="android:background">@drawable/state_pressed_button</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <!-- Note -->
    <style name="AppNoteHeading" parent="AppTextHeadingGeneric">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">200</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/white_transparent_80</item>
        <item name="android:background">@color/white_transparent_0</item>
    </style>

    <style name="AppNoteContent" parent="AppTextGeneric">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/white_transparent_80</item>
        <item name="android:background">@color/white_transparent_0</item>
    </style>

    <style name="AppNoteHeadingTile" parent="AppTextHeadingGeneric">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:maxEms">10</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppNoteDateTile" parent="AppTextGeneric">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_transparent_80</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>